<div class="container text-center">
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 p-4">


        {{#each links }}
        <div class="col">
            <div class=" card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text uppercase">
                         {{title}}   
                         </h3>
                    </a>
                    <p class="m-2"> {{ description }}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger m-2">Delete Link</a>
                    <a href="/links/edit/{{id}}" class="btn-edit btn btn-secondary ">Edit Link</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto ">
            <div class="card card-body text-center">
                <p>No hay links guardados</p>
                <a href="/links/add">Crea el primer link</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

 